<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/homebkg"
    tools:context="com.example.stephen.schooldash.HomePage"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/TitleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="School Dash!"
        android:textSize="32sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="154dp"
        app:layout_constraintHorizontal_bias="0.502"/>

    <TextView
        android:id="@+id/TitleMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TitleName"
        android:text="I live in:"
        android:textSize="18sp"
        android:layout_marginEnd="14dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="272dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/SchoolName"
        android:layout_marginRight="0dp"
        app:layout_constraintHorizontal_bias="0.712"/>

    <EditText
        android:id="@+id/SchoolName"
        android:layout_width="185dp"
        android:layout_height="48dp"
        android:layout_marginEnd="33dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="City"
        tools:layout_editor_absoluteX="137dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:text="View Schools"
        android:textColor="@android:color/background_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="346dp"/>

</android.support.constraint.ConstraintLayout>
